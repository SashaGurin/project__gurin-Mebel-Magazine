mixin item_menu(img,title,subtitle,text,count)
  .feature__item.item
    .feature__img-box
      img(src=img, alt="картинка")
    .feature__info
      .feature__title-box
        h3.middle-title.feature-title=title
        span.middle-title.feature-span=subtitle
      p.feature__text=text
      .rating__box
        .reting__box-add
          .add-line
          .add-column
        .reting__box-stars
          .rating(data-rating=count)
            .rating__star
            .rating__star
            .rating__star
            .rating__star
            .rating__star

